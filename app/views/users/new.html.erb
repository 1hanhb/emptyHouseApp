<h1>Sign up</h1>

<%= form_for(:user, url:users_path) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %><br>

  <%= f.label :email %>
  <%= f.text_field :email %><br>

  <%= f.label :password %>
  <%= f.password_field :password_digest %><br>

  <%= f.submit "Sign up", class: "btn btn-large btn-primary" %>
<% end %>

<p> user? <%= link_to "Sign in now!", signin_path %></p>

